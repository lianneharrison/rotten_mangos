<h1>Rotten Mangoes</h1>
  <hr>
  <%= link_to "Submit a movie!", new_movie_path, class: "waves-effect waves-light btn" %>
  <hr>
  <%= form_tag(movies_path, method: :get) do %>

    <div class="row">
      
      <div class ="input-field col 6">

      <%= label_tag :search %>
      <%= text_field_tag :search %>
      </div>

      <div class="input-field col s6">
      <%= select_tag :runtime_in_minutes, options_for_select(@movie_duration_options) %>
      </div>

      <%= submit_tag "search", class: "waves-effect waves-light btn" %>
    </div>

  <% end %>


  <% @movies.each do |movie| %>
    <%= render 'movie', :movie => movie %>
  <% end %>
